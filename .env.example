# PostgreSQL Database Credentials
# Auth Service
AUTH_DB_USER=app_user
AUTH_DB_PASSWORD=your_secure_password_here
AUTH_DB_NAME=auth_db
AUTH_DB_HOST=auth-db
AUTH_DB_PORT=5432

# Projects Service
PROJECTS_DB_USER=projects_user
PROJECTS_DB_PASSWORD=your_secure_password_here
PROJECTS_DB_NAME=projects_db
PROJECTS_DB_HOST=projects-db
PROJECTS_DB_PORT=5432

# Defects Service
DEFECTS_DB_USER=defects_user
DEFECTS_DB_PASSWORD=your_secure_password_here
DEFECTS_DB_NAME=defects_db
DEFECTS_DB_HOST=defects-db
DEFECTS_DB_PORT=5432

# Reports Service
REPORTS_DB_USER=reports_user
REPORTS_DB_PASSWORD=your_secure_password_here
REPORTS_DB_NAME=reports_db
REPORTS_DB_HOST=reports-db
REPORTS_DB_PORT=5432

# JWT Configuration (должен быть одинаковым для svc_auth и svc_gateway)
JWT_SECRET_KEY=your_super_secret_jwt_key_replace_this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Service URLs (для Docker network)
AUTH_SERVICE_URL=http://svc_auth:8001
PROJECTS_SERVICE_URL=http://svc_projects:8002
DEFECTS_SERVICE_URL=http://svc_defects:8003
REPORTS_SERVICE_URL=http://svc_reports:8004
