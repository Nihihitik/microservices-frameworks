# Database Configuration
DB_USER=app_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_db

# Database URL (constructed from above)
# Для локальной разработки: postgresql://app_user:password@localhost:5432/auth_db
# Для Docker: postgresql://app_user:password@auth-db:5432/auth_db
DATABASE_URL=postgresql://app_user:your_secure_password_here@localhost:5432/auth_db

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_replace_with_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8001
